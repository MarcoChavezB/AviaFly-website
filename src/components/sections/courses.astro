---
 import CoursesPhoto from '../cards/courses-photo.astro'
---

<section id="courses" #courses class="mt-20 flex justify-center items-center">
  <div class="intra-cont">
    <div class="title flex items-center justify-center">
      <h3 class="p-2 px-40 font-bold text-2xl">CURSOS</h3>
    </div>
    <div class="courses grid grid-rows-3 grid-cols-3 mt-10 gap-10">
      <a href="/tecnico-en-mantenimiento-aeronautico">
        <CoursesPhoto 
          title="TÉCNICO EN MANTENIMIENTO AERONÁUTICO"
          img="/img/Tecnico/Tecnico.jpg"/>
      </a>

      <a href="/sobrecargo">
      <CoursesPhoto 
        title="SOBRECARGO"
        img="/img/Sobrecargo/Sobrecargo.png"/>
      </a>

      <a href="/piloto-privado-intensivo">
      <CoursesPhoto 
        title="PILOTO PRIVADO (INTENSIVO)"
        img="/img/PilotoPrivadoIntensivo/PilotoPirvadoIntencivo.png"/>
      </a>

      <a href="/piloto-privado">
      <CoursesPhoto 
        title="PILOTO PRIVADO"
        img="/img/PilotoPrivado/PilotoPrivado.jpg"/>
      </a>
    </div>
  </div>
</section>

<style>
  section{
    height: 73vh;
    background-color: #090C2B;
  }


  .intra-cont{
    height: 80%;
    width: 50%;
  }


  .title h3{
    background-color: white;
    color: #090C2B;
  }


  @media only screen and (max-width: 599px) {
    .intra-cont{
      width: 90%;
    }

    section{
      height: fit-content;
      padding-top: 50px;
      padding-bottom: 50px;
    }

    .courses{
      grid-template-rows: repeat(1, 4fr);
      grid-template-columns: 1fr;
    }
  }
</style>
