---
import SliderFrame from "../animations/slider-frame.astro";
const { img, subtitle, title, title2} = Astro.props;
---
<div class="flex items-center justify-center h-[80vh] text-center relative -z-10">
  <div class="backgroundImage">
    <SliderFrame img={img} />
    <div class="overlay"></div>
  </div>
  
  <div class="text-white flex flex-col relative z-10 h-full w-full justify-center items-center">
    <div class="flex flex-col items-center">
      <h1 class="text-sm">{subtitle}</h1>
      <h2 class="text-xl">{title} <br /> {title2}</h2>
    </div>
  </div>
</div>

<style>
  .content {
    height: 70vh;
  }

  .backgroundImage {
    position: absolute;
    height: 100%; 
    width: 100%; 
    overflow: hidden; 
    border-radius: 0px 0px 15% 15%; 
  }

  .backgroundImage img {
    object-fit: contain; 
    width: 100%; 
    height: auto; 
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1; 
  }

  .text-white {
    z-index: 10; 
  }

  .text-white h1 {
    font-size: 1rem;
    font-weight: 400;
  }

  .text-white h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 0.5rem;
  }

  button {
    background-color: #ffffff;
    color: #000000;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }


  @media only screen and (max-width: 599px) {
    .backgroundImage{
      border-radius: 0px 0px 0px 0px; 
    }
    .content{
      height: 50vh;
    }
  }
</style>
