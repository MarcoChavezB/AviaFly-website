---
const {
    img,
    title
} = Astro.props
---

<article class="image-background flex items-end justify-start relative h-96" style={`background-image: url('${img}');`}>
  <div class="title text-start text-white font-bold p-5 py-8 text-lg leading-5 underline cursor-pointer">
    <h4>{title}</h4>
  </div>
</article>

<style>
  .image-background {
    height: 22.7vh;
    width: 16vw;
    border-radius: 10px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    overflow: hidden;
  }

  .image-background::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0));
    border-radius: 10px;
  }

  .title {
    position: relative;
    z-index: 1;
  }


  @media only screen and (max-width: 599px) {
    .image-background{
      width: 100%;
    }
  }
</style>
