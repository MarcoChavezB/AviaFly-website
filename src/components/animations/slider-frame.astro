---
const { img } = Astro.props;
---
<div class="slider-frame">
  <ul class="slider">
    {img.map((src: string, index: number) => (
    <li>
        <img src={src} alt={`Image ${index}`} />
      </li>
    ))}
  </ul>
</div>

<style>
  .slider-frame {
    width: 100%;
    height: 100%;
    overflow: hidden; /* Aseguramos que solo una imagen sea visible a la vez */
    position: relative;
  }

  .slider {
    display: flex; /* Coloca las imágenes en fila */
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    list-style: none;
    transition: transform 0.5s ease-in-out; /* Si necesitas una transición suave entre imágenes */
  }

  .slider li {
    flex: 0 0 100%; /* Cada imagen ocupa el 100% del contenedor */
    height: 100%;
  }

  .slider img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Asegura que la imagen se ajuste bien */
  }

  /* Adaptación para dispositivos móviles */
  @media screen and (max-width: 767px) {
    .slider-frame {
      height: 300px; /* Ajusta según sea necesario */
    }
  }
</style>
